
@{
    ViewBag.Title = "News";
}

<style>
    #img1 {
        display: block;
        margin-left: auto;
        margin-right: auto;
        width: 100%;
        height: auto;
    }
    #profile {
        border-radius: 50%;
        width:70px;
        height:70px;
    }
    #p1 {
        font-family: Arial, Helvetica, sans-serif;
        font-size: large;
    }
</style>
<h2>News</h2>
<div class="container">
    <div class="jumbotron">
        <div class="col-md-12">
            <div class="card" style="height: 100%;">
                <div class="col-md-12">
                    @{
                        var imagedata = "data:image;base64," + Convert.ToBase64String(ViewBag.news.imagedata);
                        <img src=@imagedata class="card-img" alt="..." id="img1">
                    }
                </div>
                <div class="card-body">
                    <div>
                        <h2 class="card-title">@ViewBag.news.title</h2>
                        <h6 class="card-subtitle mb-2 text-muted">Updated:@ViewBag.news.datetime</h6>
                        <h6 class="card-subtitle mb-2 text-muted">Tag :@ViewBag.news.tag</h6>
                        <h6 class="card-subtitle mb-2 text-muted">City:@ViewBag.news.newsCity</h6>
                    </div>

                    <div>
                        <br />
                        <p id="p1" class="card-text">@ViewBag.news.description</p>
                    </div>
                    <hr />
                    <div class="card-footer">
                        @{
                            var imagedata1 = "data:image;base64," + Convert.ToBase64String(ViewBag.news.author.imagedata);
                            <img id="profile" src=@imagedata1 class="card-img" alt="..." width="70" height="70">
                        }
                        Author :<small class="text-muted">@ViewBag.news.author.authorName</small><br />

                    </div>
                    <hr />
                    <div class="row">
                        @if (Session["authorid"] != null && (int)Session["authorid"] == ViewBag.news.author.authorId)
                        {
                           <a href="@Url.Action("updateNews", "News", new { id = ViewBag.news.newsId })" class="col-lg-3">Update</a>
                            <a href="@Url.Action("deleteNews", "News", new { id = ViewBag.news.newsId })" class="col-lg-3">Remove</a>

                        }
                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
