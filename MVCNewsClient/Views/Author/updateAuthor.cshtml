
@{
    ViewBag.Title = "updateAuthor";
}

<h2>Update Author </h2>

<div class="container">
    <div class="jumbotron">
        @using (Html.BeginForm("updateAuthor", "Author", null, FormMethod.Post,
                                  new { enctype = "multipart/form-data" }))
        {
            <div class="form-group row">
                <label for="name">Name</label>
                <input type="text" class="form-control" id="name" name="authorName" value=@ViewBag.author.authorName>
            </div>

            <br />
            <div class="form-group row">
                <label for="city">City</label>
                <input type="text" class="form-control" id="city" name="authorCity" value=@ViewBag.author.authorCity>
            </div>
            <br />
            <div class="form-group row">
                <label for="image">Upload Image</label>
                <input type="file" id="image" name="file" class="form-control" />
            </div>
            <br />
            <button type="submit" class="row btn btn-primary">Update</button>
        }
    </div>
</div>